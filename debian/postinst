#!/bin/sh
# postinst script for hustoj
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

DB_USER=`cat /etc/mysql/debian.cnf |grep user|head -1|awk  '{print $3}'`
DB_PASSWORD=`cat /etc/mysql/debian.cnf |grep password|head -1|awk  '{print $3}'`
HUSTOJ_ROOT='/home/judge'

case "$1" in
    configure)
    /etc/init.d/mysql restart
    mysql -h localhost -u$DB_USER -p$DB_PASSWORD < $HUSTOJ_ROOT/sql/db.sql
    ln -s /home/judge/etc/nginx.conf /etc/nginx/conf.d/hustoj.conf
    sed -i "s/OJ_USER_NAME=root/OJ_USER_NAME=$DB_USER/g" $HUSTOJ_ROOT/etc/judge.conf
    sed -i "s/OJ_PASSWORD=root/OJ_PASSWORD=$DB_PASSWORD/g" $HUSTOJ_ROOT/etc/judge.conf
    sed -i "s/DB_USER=\"root\"/DB_USER=\"$DB_USER\"/g" $HUSTOJ_ROOT/src/web/include/db_info.inc.php
    sed -i "s/DB_PASS=\"root\"/DB_PASS=\"$DB_PASSWORD\"/g" $HUSTOJ_ROOT/src/web/include/db_info.inc.php
    chmod 775 -R /home/judge/data && chgrp -R www-data /home/judge/data
    chown www-data:www-data -R /home/judge/src/web/
    /etc/init.d/nginx restart
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
